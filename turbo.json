{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".output/**", ".mastra/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:migrate": {
      "dependsOn": ["db:generate"],
      "passThroughEnv": ["DATABASE_URL"],
      "inputs": ["drizzle/**"]
    },
    "db:generate": {
      "passThroughEnv": ["DATABASE_URL"],
      "inputs": ["src/schema/**", "drizzle.config.ts"],
      "outputs": ["drizzle/**"]
    },
    "db:seed": {
      "cache": false,
      "passThroughEnv": ["DATABASE_URL", "STRIPE_SECRET_KEY"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:check": { "cache": false },
    "db:migrate:drop": { "cache": false },
    "db:pull": { "cache": false },
    "db:push": { "cache": false },
    "db:up": { "cache": false },
    "clean": { "cache": false }
  }
}
